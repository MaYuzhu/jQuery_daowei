body
  margin: 0;
  padding: 0;
  min-width 1390px
  .header
    width: 100%;
    height: 80px;
    background: rgba(250,250,250,.5);
    border-bottom solid 1px #aaa
    .header-wrap
      width 84%
      height 100%
      /*background #fff*/
      margin 0 auto
      .header1
        float left
        /*background #fff*/
        height 100%
        display flex
        justify-content center
        align-items center
      .header2
        float left
        height 80px
        line-height 80px
        /*background #fff*/
        margin-left 70px
        a
          font-size 18px
          :nth-child(2)
            color #000
            font-weight 900
          :nth-child(3)
            color #000
            font-weight 900
            &:hover
              color red
      .header-nav
        float right
        >ul
          >li
            float left
            margin auto 18px
            height 80px
            line-height 80px
            a
              font-size 18px
              font-weight 900
              color black
              &.on
                color red
          :nth-child(7)
            a
              padding 5px
              background red
              border-radius 5px
              color #fff
  .content
    width 100%
    background #fbf8f8
    overflow hidden
    .wrap
      width 84%
      margin 0 auto
      >p
        font-size 22px
        font-weight 800
        padding  30px 0
      .content-left
        width 80%
        float left
        /*background #f0f0f0*/
        ul
          display flex
          flex-wrap wrap
          justify-content space-between
          >li
            width 25%
            margin-bottom 24px
            >a
              >div
                width 232px
                height 300px
                border solid 1px #c3c3c3
                background #fff
                box-sizing border-box
                padding 10px
                &:hover
                  box-shadow 3px 3px 8px 1px #7e8c8d
                >img
                  width 210px
                 >p:nth-child(2)
                  font-size 18px
                  color #000
                  margin 20px 0 12px
                  font-weight 800
                  >img
                    vertical-align bottom
                >p:nth-child(3)
                  font-size 12px
                  >span:first-child
                    float left
                  >span:last-child
                    float right
                  i
                    font-size 12px
                    font-style normal
      .content-right
        float left
        width 20%
        .content-right-2
          width 231px
          height 300px
          background url("../img/fuwushang/tuijianfuwushang_06.jpg")
          margin-top 23px
          padding 10px
          box-sizing border-box
          .img-w
            width 210px
            height 210px
            margin 0 auto
            position relative
            
          img
            width 130px
            display block
            margin 0 auto
            position absolute
            top 50%
            left 50%
            transform translate(-50%,-50%)

  .footer
     width 100%
     height auto
     background #fff
     .footer-top
       width 100%
       overflow hidden
       h2
         font-size 30px
         font-weight 800
         width 180px
         margin 80px auto 20px
         span
           color red
           font-weight 800
       >:nth-child(2)
         width 420px
         margin 10px auto
         font-size 20px
       >ul
         width 400px
         height 30px
         margin 20px auto
         >li
           float left
           font-size 18px
           margin 0 20px
           img
             vertical-align top
       .city
         width 84%
         margin 0 auto
         .city-left
           padding 10px 0
           float left
           width 100px
           height 200px
           font-size 20px
           font-weight 800
         ul
           float left
           display flex
           flex-wrap wrap
           margin-left 30px
           li
             width 9.090909%
             margin 10px 0
             text-align center
     >p
       padding  20px 0 20px
       color #aaaaaa
       background #FBF8F8
       >span
        display block
        width 84%
        margin 0 auto
