
body
  margin: 0;
  padding: 0;
  min-width 1390px
  .header
    width: 100%;
    height: 80px;
    background: rgba(250,250,250,.5);
    border-bottom solid 1px #aaa
    z-index 50
    top 0
    &.showhead
      position fixed
      z-index 50
      top 0
      /*transition transform 0.5s*/
      transform translateY(0)
      animation aa 0.5s
    @keyframes aa{
      0% {transform: translateY(-100%)}
      100% {transform: translateY(0)}
    }
    .header-wrap
      width 84%
      height 100%
      background rgba(250,250,250,.5)
      margin 0 auto
      .header1
        float left
        height 100%
        display flex
        justify-content center
        align-items center
      .header2
        float left
        height 80px
        line-height 80px
        margin-left 70px
        a
          font-size 18px
          :nth-child(2)
            color #000
            font-weight 900
          :nth-child(3)
            color #000
            font-weight 900
            &:hover
              color red
      .header-nav
        float right
        >ul
         >li
           float left
           margin auto 18px
           height 80px
           line-height 80px
           a
            font-size 18px
            font-weight 900
            color black
            &.on
              color red
         :nth-child(7)
           a
            padding 5px
            background red
            border-radius 5px
            color #fff

  .content
    width 100%
    height auto
    /*margin-top 80px*/
    .content-nav-wrap
      position relative
      width 100%
      height 420px
      margin 0 auto
      background #8cf8ff
      .img-wrap
        width 100%
        height 420px
        .swiper-container
          height 420px
          .swiper-wrapper
            position relative
            .swiper-slide
              width 84%
              position relative
              overflow hidden
              img
                position absolute
                left 50%
                transform translateX(-50%)




      .item-ul-wrap
        width 84%
        position absolute
        z-index 20
        top 0
        left 50%
        transform translateX(-50%)
        .item-ul
          position absolute
          top 0
          left 20px
          width 160px
          height 420px
          display flex
          flex-direction row-reverse
          justify-content space-around
          flex-wrap wrap
          align-items center
          background #757881
          li
            width 160px
            height 10%
            display flex
            align-items center
            justify-content center

            .jiao
              opacity 0
              width 0
              height 0
              border 10px solid transparent
              border-right-color rgb(200,200,200)
              transform translateX(21px)
             /* width 20px
              height 20px
              box-sizing border-box
              border-right 10px solid red
              border-left  10px solid transparent
              border-top 10px solid transparent
              border-bottom  10px solid transparent*/

            &.on
              background #50535c
              a
                i
                  opacity 0
              .jiao
                opacity 1
            a
              color #fff
              font-weight 800
              font-size 16px


        .item-ul2
          display none
          position absolute
          top 0
          left 160px
          width 160px
          height 420px
          align-items center
          background rgba(200,200,200,.5)
          li
            width 160px
            height 10%
            display flex
            align-items center
            justify-content center
            a
              color #505050
              background rgba(200,200,200,.5)
              font-weight 800
              font-size 16px
              &.on1
                color  red


  .content1-wrap
    width 100%
    .content1
      width 84%
      background #FBF8F8
      margin 0 auto
      padding 50px 10px 20px
      h2
        width 120px
        margin 0 auto
        font-size 28px
        font-weight 700
      .content1-nav
        width 100%
        position relative
        ul
          width 560px
          height 50px
          display flex
          justify-content space-between
          margin 14px auto
          font-size 22px
          font-weight 100
        .content1-right
          position absolute
          top 4px
          right 6px
          font-size 18px
          font-weight 100
      .content1-img-wrap
        display flex
        justify-content space-around
        .content1-img
          width 230px
          height 345px
          padding 10px
          box-sizing border-box
          border 1px solid #bbbbbb
          &:hover
            box-shadow 3px 3px 8px 1px #7e8c8d
          >a
            >:nth-child(2)
              font-size 18px
              color black
              margin 4px 0
            >:nth-child(3)
              color #999
              font-size 14px
            >:nth-child(4)
              margin 10px auto
              width 208px
              height 24px
              >:first-child
                color red
                float left
              >:last-child
                float right
                color white
                background red
                border-radius 4px
                padding 4px 10px
            img
              width 210px
  .footer
    width 100%
    height auto
    background #FBF8F8
    .footer-top
      width 100%
      overflow hidden
      h2
        font-size 30px
        font-weight 800
        width 180px
        margin 80px auto 20px
        span
          color red
          font-weight 800
      >:nth-child(2)
        width 420px
        margin 10px auto
        font-size 20px
      >ul
        width 400px
        height 30px
        margin 20px auto
        >li
          float left
          font-size 18px
          margin 0 20px
          img
            vertical-align top
      .city
        width 84%
        margin 0 auto
        .city-left
          padding 10px 0
          float left
          width 100px
          height 200px
          font-size 20px
          font-weight 800
        ul
          float left
          display flex
          flex-wrap wrap
          margin-left 30px
          li
            width 9.090909%
            margin 10px 0
            text-align center
    .footer-bottom
      width 84%
      margin 0 auto
      .foot-he
        font-weight 800
        font-size 20px
        margin 10px 0
      ul
        display flex
        justify-content space-around
        flex-wrap wrap
        li
          width 11.111%
          margin 10px 0
          img
            width 100px
            background #fff
            padding 10px
      >p
        padding  10px 0 20px
        color #aaaaaa


